<div class="container p-3">
  <h2>Host Dashboard</h2>
  <hr>

    <div class="d-flex justify-content-between align-items-centered mb-2">
      <h3>My Spaces</h3>
      <%= link_to "Add New Space", new_space_path, class: 'btn-green' %>
    </div>
    <div class="cards">
      <% @spaces.each do |space| %>
      <div class="card-trip">
        <% if space.photo.attached? %>
          <%= cl_image_tag space.photo.key %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= space.name %></h2>
            <p><%= space.description %></p>
          </div>
          <h2 class="card-trip-pricing"><%= space.price_per_day %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
      <% end %>
    </div>

    <div class="d-flex justify-content-between align-items-centered mb-2 mt-3">
      <h3>My Bookings</h3>
    </div>
    <div class="cards">
      <% @bookings.each do |booking| %>
      <div class="card-trip">
        <% if booking.space.photo.attached? %>
          <%= cl_image_tag booking.space.photo.key %>
        <% end %>
        <div class="card-trip-infos">
          <div>
            <h2><%= booking.space.name %></h2>
            <p><%= booking.space.description %></p>
            <p><%= booking.start_date.strftime('%B %e, %Y') %></p>
            <p><%= booking.end_date.strftime('%B %e, %Y') %></p>
          </div>
          <h2 class="card-trip-pricing"><%= booking.price_per_day %></h2>
          <img src="https://kitt.lewagon.com/placeholder/users/krokrob" class="card-trip-user avatar-bordered" />
        </div>
      </div>
      <% end %>
    </div>

</div>

