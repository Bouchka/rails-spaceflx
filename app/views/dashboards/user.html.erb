<div class="container p-3">
  <div class="d-flex justify-content-between align-items-centered mb-2 mt-3">
    <h3>My Reservations</h3>
  </div>
  <div class="cards">
    <% @reservations.each do |reservation| %>
    <div class="card-trip">
      <% if reservation.space.photo.attached? %>
        <%= cl_image_tag reservation.space.photo.key %>
      <% end %>

        <%= link_to booking_path(reservation), method: 'delete', class:'delete_link' do %>
          <button type="button" class="btn btn-danger">Cancel</button>
        <% end %>
      <div class="card-trip-infos">
        <div>
          <h2><%= reservation.space.name %></h2>
          <p><%= reservation.space.area %></p>
          <p><%= reservation.start_date.strftime('%B %e, %Y') %></p>
          <p><%= reservation.end_date.strftime('%B %e, %Y') %></p>
        </div>
        <h2 class="card-trip-pricing">AED <%= reservation.price_per_day %></h2>
        <% if reservation.space.owner.photo.attached? %>
          <%= cl_image_tag reservation.space.owner.photo.key, class: "card-trip-user avatar-bordered" %>
          <% else %>
          <%= image_tag 'missing-avatar.png', class: "card-trip-user avatar-bordered" %>
          <% end %>
      </div>
    </div>
    <% end %>
  </div>
</div>


