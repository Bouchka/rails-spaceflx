<%= form_tag spaces_path, method: :get do %>
<div class="form-row align-items-center">
  <div class="col-auto">
    <%= text_field_tag :query,
      params[:query],
      class: 'form-control',
      placeholder: "Location" %>
  </div>
  <div class="col-auto">
    <%= submit_tag "Find spaces", class: 'btn btn-outline-success' %>
  </div>
</div>
<% end %>
