<div class="container p-3">
  <h3>Your booking details</h3>
  <div class="cards">
    <div class="card-trip">
    <% if @booking.space.photo.attached? %>
      <%= cl_image_tag @booking.space.photo.key %>
    <% end %>
    <div class="card-trip-infos">
      <div>
        <h2><%= @booking.space.name %></h2>
        <p><%= @booking.space.area %></p>
        <p><%= @booking.start_date.strftime('%B %e, %Y') %></p>
        <p><%= @booking.end_date.strftime('%B %e, %Y') %></p>
        <p><strong>Your host will be <%= @space.owner.email %></strong></p>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="bg-white p-3">
      <div class="d-flex justify-content-between mt-3">
        <p><strong>Price per day</strong></p>
        <p>AED <%=@space.price_per_day%> </p>
      </div>
      <div class="d-flex justify-content-between mt-3 border-bottom">
        <p><strong>Total amount of days</strong></p>
        <p>  <%=@days%> </p>
      </div>
      <div class="d-flex justify-content-between mt-3">
        <p><strong>Total</strong></p>
        <p>  <%=@total%> </p>
      </div>
    </div>
  </div>
</div>
